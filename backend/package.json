        "@types/morgan": "^1.9.9",
        "@types/ms": "^0.7.34",
        "@types/multer": "^1.4.11",
        "@types/node": "^20.11.24",
        "@types/nodemailer": "^6.4.14",
        "@types/react": "^18.2.61",
        "@types/supertest": "^6.0.2",
        "@typescript-eslint/eslint-plugin": "^7.1.0",
        "@typescript-eslint/parser": "^7.1.0",
        "eslint": "^8.57.0",
