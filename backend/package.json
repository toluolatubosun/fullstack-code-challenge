        "express-async-errors": "^3.1.1",
        "helmet": "^7.1.0",
        "ioredis": "^5.3.2",
        "joi": "^17.12.2",
        "jsonwebtoken": "^9.0.2",
        "mongodb": "^5.4.0",
        "mongodb-memory-server": "^8.12.2",
        "mongoose": "^8.2.0",
        "morgan": "^1.10.0",
        "ms": "^2.1.3",
        "multer": "^1.4.5-lts.1",
        "nanoid": "^5.0.6",
        "nodemailer": "^6.9.11",
        "react": "^18.2.0",
